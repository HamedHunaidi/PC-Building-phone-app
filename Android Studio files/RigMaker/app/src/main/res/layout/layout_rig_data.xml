<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    android:elevation="16dp">
<androidx.constraintlayout.widget.ConstraintLayout
    android:padding="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_rigName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_created_by"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Created by: "
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_rigName"
        app:layout_constraintStart_toEndOf="@+id/tv_rigName" />

    <TextView
        android:id="@+id/tv_created_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="admin"
        app:layout_constraintBottom_toBottomOf="@+id/tv_created_by"
        app:layout_constraintStart_toEndOf="@+id/tv_created_by" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Price:"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/tv_rigName"
        app:layout_constraintTop_toBottomOf="@+id/tv_rigName" />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/textView4"
        app:layout_constraintStart_toEndOf="@+id/textView4" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/common_google_signin_btn_text_light"
        app:layout_constraintTop_toBottomOf="@id/tv_price">

    </View>

    <TextView
        android:id="@+id/tv_cpu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="Cpu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <TextView
        android:id="@+id/tv_cpu_cooler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:text="CpuCooler"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <TextView
        android:id="@+id/tv_gpu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Gpu"
        app:layout_constraintStart_toStartOf="@+id/tv_cpu"
        app:layout_constraintTop_toBottomOf="@+id/tv_cpu" />

    <TextView
        android:id="@+id/tv_motherboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Motherboard"
        app:layout_constraintEnd_toEndOf="@+id/tv_cpu_cooler"
        app:layout_constraintTop_toBottomOf="@+id/tv_cpu_cooler" />

    <TextView
        android:id="@+id/tv_power_supply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Power Supply"
        app:layout_constraintStart_toStartOf="@+id/tv_gpu"
        app:layout_constraintTop_toBottomOf="@+id/tv_gpu" />

    <TextView
        android:id="@+id/tv_ram"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Ram"
        app:layout_constraintEnd_toEndOf="@+id/tv_motherboard"
        app:layout_constraintTop_toBottomOf="@+id/tv_motherboard" />

    <TextView
        android:id="@+id/tv_storage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Storage"
        app:layout_constraintStart_toStartOf="@+id/tv_power_supply"
        app:layout_constraintTop_toBottomOf="@+id/tv_power_supply" />

    <TextView
        android:id="@+id/tv_case"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Case"
        app:layout_constraintEnd_toEndOf="@+id/tv_ram"
        app:layout_constraintTop_toBottomOf="@+id/tv_ram" />

    <TextView
        android:id="@+id/tv_monitor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Monitor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_storage" />


    <ImageView
        android:id="@+id/iv_delete"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_delete" />


</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>