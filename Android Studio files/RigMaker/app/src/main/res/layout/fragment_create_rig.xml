<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragments.CreateRigFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_create_build"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >



            <!-- TODO: Update blank fragment layout -->

            <TextView
                android:id="@+id/tv_choose_your_cpu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose Your Cpu"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/info_cpu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_choose_your_cpu"
                app:layout_constraintBottom_toTopOf="@+id/sp_cpu_select"
                app:layout_constraintStart_toStartOf="@id/tv_choose_your_cpu"
                android:textSize="10sp"
                android:text="cpu is the brain of the computer"
                android:textStyle="italic"
                android:textColor="@android:color/holo_purple"
                />


            <Spinner
                android:id="@+id/sp_cpu_select"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown"
                app:layout_constraintTop_toBottomOf="@id/tv_choose_your_cpu"
                app:layout_constraintStart_toStartOf="@id/tv_choose_your_cpu"
                app:layout_goneMarginTop="8dp"
                />

            <TextView
                android:id="@+id/tv_choose_your_cpu_cooler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choose Your Cpu Cooler"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/sp_cpu_select"
                app:layout_constraintStart_toStartOf="@id/sp_cpu_select" />

            <TextView
                android:id="@+id/info_cpu_cooler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_choose_your_cpu_cooler"
                app:layout_constraintBottom_toTopOf="@+id/sp_cpu_cooler_select"
                app:layout_constraintStart_toStartOf="@id/tv_choose_your_cpu_cooler"
                android:textSize="10sp"
                android:text="cpu cooler is what cools the brain of the computer"
                android:textStyle="italic"
                android:textColor="@android:color/holo_purple"
                />


            <Spinner
                android:id="@+id/sp_cpu_cooler_select"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown"
                app:layout_constraintTop_toBottomOf="@id/info_cpu_cooler" />

            <TextView
                android:id="@+id/tv_choose_your_gpu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choose Your Gpu"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/sp_cpu_cooler_select"
                app:layout_constraintStart_toStartOf="@id/sp_cpu_cooler_select" />

            <TextView
                android:id="@+id/info_gpu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_choose_your_gpu"
                app:layout_constraintBottom_toTopOf="@+id/sp_gpu_select"
                app:layout_constraintStart_toStartOf="@id/tv_choose_your_gpu"
                android:textSize="10sp"
                android:text="Gpu is the heart of the computer"
                android:textStyle="italic"
                android:textColor="@android:color/holo_purple"
                />


            <Spinner
                android:id="@+id/sp_gpu_select"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown"
                app:layout_constraintTop_toBottomOf="@id/info_gpu" />

            <TextView
                android:id="@+id/tv_choose_your_motherboard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choose Your Motherboard"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/sp_gpu_select"
                app:layout_constraintStart_toStartOf="@id/sp_gpu_select" />

            <TextView
                android:id="@+id/info_motherboard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_choose_your_motherboard"
                app:layout_constraintBottom_toTopOf="@+id/sp_motherboard_select"
                app:layout_constraintStart_toStartOf="@id/tv_choose_your_motherboard"
                android:textSize="10sp"
                android:text="The motherbaod is the Skeleton of the computer"
                android:textStyle="italic"
                android:textColor="@android:color/holo_purple" />


            <Spinner
                android:id="@+id/sp_motherboard_select"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown"
                app:layout_constraintTop_toBottomOf="@id/info_motherboard" />

            <TextView
                android:id="@+id/tv_choose_your_power_supply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choose Your Power Supply"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/sp_motherboard_select"
                app:layout_constraintStart_toStartOf="@id/sp_motherboard_select" />

            <TextView
                android:id="@+id/info_power_supply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_choose_your_power_supply"
                app:layout_constraintBottom_toTopOf="@+id/sp_power_supply_select"
                app:layout_constraintStart_toStartOf="@id/tv_choose_your_power_supply"
                android:textSize="10sp"
                android:text="The Psu is the energy of the computer"
                android:textStyle="italic"
                android:textColor="@android:color/holo_purple" />

            <Spinner
                android:id="@+id/sp_power_supply_select"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown"
                app:layout_constraintTop_toBottomOf="@id/info_power_supply" />

            <TextView
                android:id="@+id/tv_choose_your_ram"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choose Your Ram"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/sp_power_supply_select"
                app:layout_constraintStart_toStartOf="@id/sp_power_supply_select" />

            <TextView
                android:id="@+id/info_ram"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_choose_your_ram"
                app:layout_constraintBottom_toTopOf="@+id/sp_ram_select"
                app:layout_constraintStart_toStartOf="@id/tv_choose_your_ram"
                android:textSize="10sp"
                android:text="Ram is the short term memory of the computer"
                android:textStyle="italic"
                android:textColor="@android:color/holo_purple" />

            <Spinner
                android:id="@+id/sp_ram_select"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown"
                app:layout_constraintTop_toBottomOf="@id/info_ram" />

            <TextView
                android:id="@+id/tv_choose_your_storage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choose Your Storage"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/sp_ram_select"
                app:layout_constraintStart_toStartOf="@id/sp_ram_select" />

            <TextView
                android:id="@+id/info_storage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_choose_your_storage"
                app:layout_constraintBottom_toTopOf="@+id/sp_storage_select"
                app:layout_constraintStart_toStartOf="@id/tv_choose_your_storage"
                android:textSize="10sp"
                android:text="Storage is the long term memory of the computer"
                android:textStyle="italic"
                android:textColor="@android:color/holo_purple" />

            <Spinner
                android:id="@+id/sp_storage_select"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown"
                app:layout_constraintTop_toBottomOf="@id/info_storage" />

            <TextView
                android:id="@+id/tv_choose_your_case"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choose Your Case"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/sp_storage_select"
                app:layout_constraintStart_toStartOf="@id/sp_storage_select" />

            <TextView
                android:id="@+id/info_case"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_choose_your_case"
                app:layout_constraintBottom_toTopOf="@+id/sp_case_select"
                app:layout_constraintStart_toStartOf="@id/tv_choose_your_case"
                android:textSize="10sp"
                android:text="Case is the skin of the computer"
                android:textStyle="italic"
                android:textColor="@android:color/holo_purple" />

            <Spinner
                android:id="@+id/sp_case_select"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown"
                app:layout_constraintTop_toBottomOf="@id/info_case" />

            <TextView
                android:id="@+id/tv_choose_your_monitor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choose Your Monitor"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/sp_case_select"
                app:layout_constraintStart_toStartOf="@id/sp_case_select"
                />

            <TextView
                android:id="@+id/info_monitor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_choose_your_monitor"
                app:layout_constraintBottom_toTopOf="@+id/sp_monitor_select"
                app:layout_constraintStart_toStartOf="@id/tv_choose_your_monitor"
                android:textSize="10sp"
                android:text="Monitor is the a screen where you can see what the computer produce"
                android:textStyle="italic"
                android:textColor="@android:color/holo_purple" />

            <Spinner
                android:id="@+id/sp_monitor_select"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown"
                app:layout_constraintTop_toBottomOf="@id/info_monitor" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <Button
        android:id="@+id/btn_create_build"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="8dp"
        android:text="Create Build"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>