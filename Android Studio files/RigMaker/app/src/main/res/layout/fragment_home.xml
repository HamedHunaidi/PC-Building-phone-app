<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragments.HomeFragment">

    <!-- TODO: Update blank fragment layout -->
    <Button
        android:id="@+id/btm_suggested"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Suggested"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.100000024" />

    <Button
        android:id="@+id/btn_community"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Community"
        app:layout_constraintEnd_toEndOf="@+id/btm_suggested"
        app:layout_constraintStart_toStartOf="@+id/btm_suggested"
        app:layout_constraintTop_toBottomOf="@+id/btm_suggested" />

    <ImageView
        android:id="@+id/iv_create_your_rig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:src="@drawable/ic_baseline_build_24"
        app:layout_constraintEnd_toEndOf="@+id/btn_community"
        app:layout_constraintStart_toStartOf="@+id/btn_community"
        app:layout_constraintTop_toBottomOf="@+id/btn_community" />

    <Button
        android:id="@+id/btn_help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="Help"
        app:layout_constraintEnd_toEndOf="@+id/iv_create_your_rig"
        app:layout_constraintStart_toStartOf="@+id/iv_create_your_rig"
        app:layout_constraintTop_toBottomOf="@+id/iv_create_your_rig" />

    <Button
        android:id="@+id/btn_logOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Log Out"
        app:layout_constraintEnd_toEndOf="@+id/btn_help"
        app:layout_constraintStart_toStartOf="@+id/btn_help"
        app:layout_constraintTop_toBottomOf="@+id/btn_help" />
</androidx.constraintlayout.widget.ConstraintLayout>